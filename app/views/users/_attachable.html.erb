<% user = local_assigns[:user] || local_assigns[:attachment]&.attachable %>
<% if user.is_a?(User) %>
<%= link_to profile_user_path(user, script_name: nil), class: "mention mention--inline", data: { turbo_frame: "_top" } do %>
  <%= avatar_image_tag user %>
  <%= user.first_name %>
<% end %>
<% elsif user.present? %>
<%= render "users/missing_attachable", debug_hint: "attachable_not_user" %>
<% end %>
