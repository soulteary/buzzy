<%= column_tag id: "not-now", name: t("columns.not_now"), drop_url: user_scoped_column_drop_path(board, type: :not_now, card_id: "__id__"), class: "cards--on-deck", style: "--card-color: var(--color-card-complete);",
  data: {
    card_hotkeys_disabled: true,
    collapsible_columns_target: "column",
    drag_and_strum_target: "container",
    action: "focus->collapsible-columns#focusOnColumn"
  } do %>
  <header class="cards__header">
    <%= render "boards/show/expander", title: t("columns.not_now"), count: board_display_cards.postponed.count, column_id: "not-now" %>
    <%= render "boards/show/menu/maximize", column_path: user_board_columns_not_now_path(board.url_user, board) %>
  </header>
  <%= column_frame_tag :not_now_column, src: user_board_columns_not_now_path(board.url_user, board) %>
<% end %>
